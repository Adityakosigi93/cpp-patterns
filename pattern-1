// Online C++ compiler to run C++ program online
#include <bits/stdc++.h>
using namespace std;
int fn(int n){
    int i,j;
    for(i=0;i<n;i++){
        for(j=0;j<=i;j++){
            if (i%2==0  ){
                
                if (j%2==0){
                    cout<<" 1 ";
                } 
                else{
                    cout<<" 0 ";
                }
               
            
            }
             
            else{
                if (j%2==0){
                    cout<<" 0 ";
                } 
                else{
                    cout<<" 1 ";
              }   
            }
             
        }
        cout<<endl;
    }
    return 0;
}

int main() {
    int n;
    cin>>n;
    fn(n);

    return 0;
}
