#include <bits/stdc++.h>
using namespace std;
int fn(int n){
    int i,k=1,j;
    
    for(i=n-1;i>=0;i--){
        for(j=n-1;j>=i;j--){
            cout<<"*";
        }
        for(j=0;j<2*i;j++){
            cout<<" ";
        }
        for(j=n-1;j>=i;j--){
            cout<<"*";
        }
        
        cout<<endl;
    }
    for(i=n-1;i>0;i--){
        for(j=0;j<i;j++){
            cout<<"*";
        }
        for(j=0;j<2*k;j++){
            cout<<" ";
            
        }
        k++;
        for(j=0;j<i;j++){
            cout<<"*";
        }

        cout<<endl;
        
    }
    
    
        
    
    return 0;
}


int main() {
    int n;
    cin>>n;
    cout<<endl;
    fn(n);

    return 0;
}
