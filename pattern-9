#include <bits/stdc++.h>
using namespace std;
int fn(int n){
    int i,j;
    char k;
    for(i=0;i<n;i++){
        for(j=n;j>i;j--){
            cout<<"*";
        }
        for(j=0;j<2*i;j++){
            cout<<" ";
        }
        for(j=n;j>i;j--){
            cout<<"*";
        }
        

        cout<<endl;
        
    }
    for(i=n-1;i>=0;i--){
        for(j=n;j>i;j--){
            cout<<"*";
        }
        for(j=0;j<2*i;j++){
            cout<<" ";
        }
        for(j=n;j>i;j--){
            cout<<"*";
        }
        
        cout<<endl;
    }
    return 0;
}


int main() {
    int n;
    cin>>n;
    fn(n);

    return 0;
}
