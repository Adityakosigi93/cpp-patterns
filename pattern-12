#include <bits/stdc++.h>
using namespace std;
int fn(int n){
    int i,k,j;
    
    for(i=0;i<2*n-1;i++){
        for(j=0;j<2*n-1;j++){
            int top=i;
            int left=j;
            int right=(2*n-2)-j;
            int down=(2*n-2)-i;
            cout<<(n-min(min(top,down),min(right,left)));
            
            
        }
        cout<<endl;
    }

    
    
    return 0;
}


int main() {
    int n;
    cin>>n;
    cout<<endl;
    fn(n);

    return 0;
}
