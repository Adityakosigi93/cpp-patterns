// Online C++ compiler to run C++ program online
#include <bits/stdc++.h>
using namespace std;
int fn(int n){
    int i,j;
    for(i=1;i<=n;i++){
        for(j=1;j<=i;j++){
            cout<<j;
        }
        for(j=n;j>i;j--){
            cout<<" ";
        }
        for(j=n;j>i;j--){
            cout<<" ";
        }
        for(j=i;j>0;j--){
            cout<<j;
        }
        
        cout<<endl;
        cout<<endl;
    }
            
    return 0;
}

int main() {
    int n;
    cin>>n;
    fn(n);

    return 0;
}
