#include <bits/stdc++.h>
using namespace std;
int fn(int n){
    int i,k,j;
    
    for(i=0;i<n;i++){
        if (i==0 || i==n-1){
            for(j=0;j<n;j++){
                cout<<"*";
            }
        }
        else{
            
            for(j=i;j<=i;j++){
                cout<<"*";
            }
            for(j=0;j<n-2;j++){
                cout<<" ";
            }
            for(j=i;j<=i;j++){
                cout<<"*";
            }
            
        }
        
            
        
        cout<<endl;
    }   
    
    return 0;
}


int main() {
    int n;
    cin>>n;
    cout<<endl;
    fn(n);

    return 0;
}
